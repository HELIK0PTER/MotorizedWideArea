<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReservationController">
    <TextField fx:id="userIdField" promptText="User ID"/>
    <TextField fx:id="vehicleIdField" promptText="Vehicle ID"/>
    <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
    <DatePicker fx:id="endDatePicker" promptText="End Date"/>
    <Button text="Add Reservation" onAction="#handleAddReservation"/>
    <TableView fx:id="reservationsTable">
        <TableColumn text="User ID"/>
        <TableColumn text="Vehicle ID"/>
        <TableColumn text="Start Date"/>
        <TableColumn text="End Date"/>
        <!-- Ajouter d'autres colonnes selon le besoin -->
    </TableView>
</VBox>
